{{<index.html.mustache}}
  {{$content}}

    {{<primitives/h1}}
      {{$content}}
        {{labels.confirmAnonymousOrderTitle}}
      {{/content}}
    {{/primitives/h1}}

    {{<primitives/container}}
      {{$content}}
        {{<primitives/paragraph}}
          {{$content}}{{ labels.confirmAnonymousOrderIntro }}{{/content}}
        {{/primitives/paragraph}}
      {{/content}}
    {{/primitives/container}}

    {{<primitives/container}}
      {{$content}}
        {{<primitives/button}}
          {{$link}}{{baseUrl}}/innsynskravBestilling/{{innsynskravBestillingId}}/verify/{{verificationSecret}}{{/link}}
          {{$label}}{{ labels.confirmAnonymousOrderActionButton }}{{/label}}
        {{/primitives/button}}
      {{/content}}
    {{/primitives/container}}

    {{<primitives/container}}
      {{$content}}
        {{<primitives/paragraph}}
          {{$content}}{{ labels.confirmAnonymousOrderOutro }}{{/content}}
        {{/primitives/paragraph}}
      {{/content}}
    {{/primitives/container}}

    {{<primitives/spacer}}{{$height}}24{{/height}}{{/primitives/spacer}}

    {{<primitives/container}}
      {{$content}}
        {{<primitives/paragraphSmall}}
          {{$content}}{{ labels.confirmAnonymousOrderFallbackLinkText }}{{/content}}
        {{/primitives/paragraphSmall}}
        {{<primitives/paragraphSmall}}
          {{$content}}
            <span style="background:#f5f5f5; padding:6px 8px; display:inline-block; word-break:break-all; overflow-wrap:anywhere; font-family:Arial, 'Helvetica Neue', Helvetica, sans-serif; font-size:13px; line-height:1.4; border-radius:4px; color:#000000 !important; text-decoration:none !important;">
              {{baseUrl}}<wbr/>/innsynskravBestilling/<wbr/>{{innsynskravBestillingId}}<wbr/>/verify/<wbr/>{{verificationSecret}}
            </span>
          {{/content}}
        {{/primitives/paragraphSmall}}
      {{/content}}
    {{/primitives/container}}

  {{/content}}
{{/index.html.mustache}}
